<div class="jumbotron">
  <% if user_signed_in? %>
	<h1>Welcome!</h1>
	<p class="lead">
		Signed in as <strong><%= current_user.username %></strong><br />
		<p><%= image_tag @url, width: 100, height: 100, class: "image1" %></p>
	</p> 
    <%= link_to "Profile", @path, class: 'btn btn-success' %>
    <%= link_to "Timeline", user_tweets_path(@user), class: 'btn btn-success', method: :get %>
    <%= link_to "Follow", users_path(@user), class: 'btn btn-success' %>
    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-large btn-danger' %>
  <% else %>
	 <h1>Welcome, new user!</h1>
	 <p class="lead">
	    You must sign in or sign up!
	 </p>
	 <div class="row-fluid">
	    <div class="span6">
	       <%= link_to "Sign In", new_user_session_path, class: "btn btn-success" %>
	       <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-success" %>
	    </div>
	 </div>
  <% end %>
</div>