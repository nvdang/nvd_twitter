<div class="border-form-div">
	<h4 align="center">Edit Profile</h4>
    <%= form_for @profile, url: user_profile_path(@user,@profile), html: { multipart: true },method: :patch do |f| %>
    <% if @profile.errors.any? %>
				<div id="error_explanation">
				<h2>
					<%= pluralize(@profile.errors.count, "error") %>:
				</h2>
				<ul>
					<% @profile.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
				</div>
	<% end %>
    	<p>
			<%= f.label :sex %><br>
			<%= f.select(:sex, options_for_select([['Male', 'Male'], ['Female', 'Female']], 'Male')) %>
		</p>
		<p>
			<%= f.label :tel %><br>
			<%= f.text_field :tel %>
		</p>
		<p>
			<%= f.label :address %><br>
			<%= f.text_field :address %>
		</p>
		<p>
			<%= f.label :avatar %><br>
			<%= f.file_field :avatar %>
		</p>
		<p>
			<%= f.label :birthday %><br>
			<%= f.date_select :birthday, {start_year: Time.now.year, end_year: 1900, order: [:month, :day, :year]} %>
		</p>
		<p>
		    <p align="center"><%= f.submit %></p>
		</p>
    <% end %>	
</div>

