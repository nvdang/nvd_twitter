<div class="border-form-div">
	<h4 align="center">New Profile</h4>
    <%= form_for @profile, url: user_profile_path(@user,@profile), html: { multipart: true },method: :patch do |f| %>
    	<p>
			<%= f.label :sex %><br>
			<%= f.text_field :sex %>
		</p>
		<p>
			<%= f.label :tel %><br>
			<%= f.text_field :tel %>
		</p>
		<p>
			<%= f.label :address %><br>
			<%= f.text_field :address %>
		</p>
		<p>
			<%= f.label :avatar %><br>
			<%= f.file_field :avatar %>
		</p>
		<p>
			<%= f.label :birthday %><br>
			<%= f.date_select :birthday %>
		</p>
		<p>
		    <p align="center"><%= f.submit  %></p>
		</p>
    <% end %>	
</div>

