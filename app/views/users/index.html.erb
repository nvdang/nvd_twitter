<div>
<% if user_signed_in? %>
  	<div class="col-md-4 block">
      <p class="image"><%= image_tag @url, width: 100, height: 100, class: "image1" %></p>
      <br /><strong>@<%= @user.username %></strong><br />
      <span><%= link_to "Profile", @path %></span>
      <div>
		<a href="<%= following_user_path(@user) %>">
		    <strong id="following" class="stat">
		      <%= @user.following.count %>
		    </strong>
		    following<br />
		  </a>
		    <strong id="followers" class="stat">
		      <%= @user.followers.count %>
		    </strong>
		     followers
		</div>
  	</div>
  	<div class="col-md-4 block">
	  	<h4>Following</h4>
	  	<table>
			<% if @users_following.present? %>
				<% @users_following.each do |uf| %>
						<tr>
							<td>
								<% if uf.profile.present? %>
									<p class="image"><%= image_tag uf.profile.avatar.url, width: 50, height: 50, class: "image2" %></p>
									@<%= uf.username %>
								<% else %>
									<p class="image"><%= image_tag "default.png", width: 50, height: 50, class: "image2" %></p>
									@<%= uf.username %>
								<% end %>
							</td>
						</tr>
				<% end %>
			<% end %>
		</table>
	  </div>
	  <div class="col-md-4 block">
		<h4>Follower</h4>
		<table>
				<% if @users_follower.present? %>
					<% @users_follower.each do |uf| %>
							<tr>
								<td>
								<% if uf.profile.present? %>
									<p class="image"><%= image_tag uf.profile.avatar.url, width: 50, height: 50, class: "image2" %></p>
									@<%= uf.username %>
								<% else %>
									<p class="image"><%= image_tag "default.png", width: 50, height: 50, class: "image2" %></p>
									@<%= uf.username %>
								<% end %>
								</td>
							</tr>
					<% end %>
				<% end %>
		</table>
	  </div>
	  <% end %>
</div>