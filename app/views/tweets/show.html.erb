<div class="jumbotron">
	<div class="tweet">
	<p class="text">
	  <strong>Tweet:</strong>
	  <%= @tweet.text %>
	</p>
	
	<h4>Comments</h4>
	<% @tweet.comments.each do |c| %>
		<p>
			<strong><%= c.commenter %>:</strong>
			<%= c.text %>
			
			<%= link_to 'Delete', [@user, c.tweet, c],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>
		</p>
	<% end %>
	
	<h4>Add a comment</h4>
	<%= form_for([@user, @tweet, @tweet.comments.build]) do |f| %>
	  <p>
	    <%= f.label :commenter %><br>
	    <%= f.text_field :commenter %>
	  </p>
	  <p>
	    <%= f.label :text %><br>
	    <%= f.text_area :text %>
	  </p>
	  <p>
	    <%= f.submit "Comment"%>
	  </p>
	<% end %>
	</div>
	<%= link_to "Back", user_tweets_path, :class => 'btn btn-success' %>
</div>